<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product.ProductDAO" > <!-- 매핑명 변경, DAO 인터페이스화, 메소드 변경 -->

<select id="productlist" resultType="productdto"><!-- mybatis-config.xml -->
select productcode, productname, price from product;
</select>

<select id="product" resultType="productdto" parameterType="int">
	select productcode, productname, price, company, balance, regdate, date_format(regdate, '%년도%월%일') as regdate from product where productcode=#{productcode}
</select>

<insert id="insertproduct" parameterType="productdto">
 insert into product values(#{productcode} ,#{productname},#{price},#{company},#{balance},#{regdate})
</insert>

<update id="updateproduct" parameterType="productdto">
	update product
	set productname=#{name} , company=#{company}
	where productcode=#{productcode}
</update>

<delete id="deleteproduct" parameterType="String" >
	delete from product where productcode=#{i}
</delete>


<!-- parameterType="int[]" 생략 가능 -->
<select id="paginglist" resultType="productdto" >
select * from product limit 
	<foreach collection="array" item="num" separator="," >
	 	#{num}
	</foreach>
</select>


<select id="companysearch" resultType="String" >
select id from product where company in 
<foreach collection="array" item="comp" open="("  close=")"  separator=",">
	#{comp}
</foreach>
</select>
</mapper>









